{
  "compilerOptions": {
    "target": "es2016",              //"es2016" // es5
    "experimentalDecorators": true,  
    "strict": false,
    "emitDecoratorMetadata": true,  
    "noImplicitUseStrict": true, 
    "module": "commonjs",            
    "baseUrl": "./src",              
    "paths": {
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@requests/*": ["requests/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["shared/errors/*"],
      "@database": ["database/*"],
      "@src": ["."]
    },                                      
    "resolveJsonModule": true,       
    "outDir": "./dist",   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true                                 
  }
}